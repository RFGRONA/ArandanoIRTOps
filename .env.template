# -------------------------- #
# CADDY CONFIGURATION        #
# -------------------------- #
# Email address for Let's Encrypt notifications.
# This is used by Caddy for SSL certificate management.
CADDY_EMAIL=

# -------------------------- #
# POSTGRESQL CONFIGURATION   #
# -------------------------- #
# Credentials for Docker Compose to create and access the database.
POSTGRES_DB=arandano_db
POSTGRES_USER=arandano_user
POSTGRES_PASSWORD=

# --------------------------------------- #
# CONNECTION STRING FOR .NET APPLICATION  #
# --------------------------------------- #
# This variable is read by the application to connect to Postgres.
CONNECTION_STRING="Host=postgres;Port=5432;Database=${POSTGRES_DB};Username=${POSTGRES_USER};Password=${POSTGRES_PASSWORD};"

# -------------------------- #
# MINIO CONFIGURATION        #
# -------------------------- #
# Root credentials for the MinIO console.
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=

# Credentials the .NET application will use to connect to MinIO.
MINIO_APP_ENDPOINT="http://minio:9000"
MINIO_APP_ACCESS_KEY=
MINIO_APP_SECRET_KEY=

# ---------------------------------------- #
# THIRD-PARTY & INTERNAL SERVICES API KEYS #
# ---------------------------------------- #
WEATHER_API_KEY=
WEATHER_API_URL=
BREVO_API_KEY=
GRAFANA_API_KEY=

# ------------------------------ #
# CLOUDFLARE TURNSTILE (CAPTCHA) #
# ------------------------------ #
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# --------------------------------- #
# APPLICATION ACCESS CREDENTIALS    #
# --------------------------------- #
ADMIN_USERNAME=
# IMPORTANT: This should be a Bcrypt hash of the password, not the plaintext password.
ADMIN_PASSWORD_HASH=